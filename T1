module liga_desliga(
	input pulso,
	output ligado 
);
	
	assign ligado = pulso; //atribui o valor do Registrador ao Fio

endmodule

module Test;
	reg pulso; // guarda a entrada no registrador
	wire ligado; // saida

liga_desliga Teste(pulso, ligado);	
	always #3 pulso = ~pulso;// a cada uma instancia de tempo o registrador vai receber o valor do registrador negado
endmodule
